FROM node:20.11.0-alpine

# Set working directory

WORKDIR /app

# Install system dependencies

COPY Server/package*.json ./
RUN npm install

COPY Server/.dev.env /app/.env
COPY Server/index.js /app/index.js
COPY Server/service/ /app/service/

# Expose ports

EXPOSE 3001

CMD ["node", "index.js"]